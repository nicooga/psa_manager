nav.navbar.navbar-default.navbar-fixed-bottom.navbar-collapse role='navigation'
  / Brand and toggle get grouped for better mobile display
  .navbar-header= link_to 'PSA Manager', 'root_path', class: 'navbar-brand'

  ul.nav.navbar-nav
    li= link_to Contact.model_name.human.pluralize, user_contacts_path(current_user)
    li= link_to Product.model_name.human.pluralize, products_path
    li= link_to Kit.model_name.human.pluralize, user_kits_path(current_user)
    li= link_to Activity.model_name.human.pluralize, user_activities_path(current_user)
    li= link_to Society.model_name.human.pluralize, user_societies_path(current_user)
    li= link_to ColdList.model_name.human.pluralize, user_cold_lists_path(current_user)

  ul.nav.navbar-nav.navbar-right.navbar-inverse
    - if current_user
      li.dropdown
        = link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
          = icon('list-alt', current_user.email)
        ul.dropdown-menu
          li= link_to 'Logout', logout_path

    - else
      li= link_to 'Login with Google :D', '/auth/google_oauth2'
